# Server Configuration
PORT=3000
NODE_ENV=development

# WhatsApp Business API Configuration
WHATSAPP_PROVIDER=auto

# Twilio Configuration (fallback)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=whatsapp:+1234567890

# Dialog360 Configuration (recommended)
DIALOG360_API_KEY=your_dialog360_api_key
DIALOG360_PHONE_NUMBER_ID=your_dialog360_phone_number_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# Calendly Configuration
CALENDLY_API_KEY=
CALENDLY_USER_URI=ai_assistant
CALENDLY_EVENT_TYPE_URI=your_calendly_event_type_uri

# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ADMIN_EMAIL=admin@yourcompany.com

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# Database (Optional - for production)
DATABASE_URL=your_database_url

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
JWT_SECRET=your_jwt_secret_key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Business Configuration
COMPANY_NAME=Your Company Name
COMPANY_WEBSITE=https://yourcompany.com
TIMEZONE=UTC

# Testing Configuration
USE_MOCK_WHATSAPP=true 